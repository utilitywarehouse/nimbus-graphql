    "jest": "^23.6.0",
    "jest-junit": "^8.0.0",
    "mockttp": "^0.12.4",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0"
